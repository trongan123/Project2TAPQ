@model BusinessObjects.Models.Account
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    IEnumerable<BusinessObjects.Models.Ward> DetailWard = ViewBag.Ward as IEnumerable<BusinessObjects.Models.Ward>;
    IEnumerable<BusinessObjects.Models.District> DetailDistrict = ViewBag.District as IEnumerable<BusinessObjects.Models.District>;
    IEnumerable<BusinessObjects.Models.Province> DetailProvince = ViewBag.Province as IEnumerable<BusinessObjects.Models.Province>;
}

<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
    <div class="row">
        <ol class="breadcrumb">
            <li>
                <a href="#">
                    <svg class="glyph stroked home">
                        <use xlink:href="#stroked-home"></use>
                    </svg>
                </a>
            </li>
            <li><a href="farmer.html">Quản lý chủ hộ</a></li>
            <li class="active">Lê Minh Trí</li>
        </ol>
    </div>
    <!--/.row-->

    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Thành viên: Lê Minh Trí</h1>
        </div>
    </div>
    <!--/.row-->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="col-md-8">
                       
                        <form asp-action="EditFarmer">
                            <input type="hidden" asp-for="IdAcc"/>
                            <input type="hidden" asp-for="Status"/>
                            <input type="hidden" asp-for="Role"/>
                            <input type="hidden" asp-for="Password"/>
                            <input type="hidden" asp-for="DateJoin"/>

                            <div class="form-group">
                                <label>Họ & Tên</label>
                                <input asp-for="Fullname" name="Fullname" required class="form-control" placeholder="">
                            </div>
                            <div class="form-group">
                                <label>Email</label>
                                <input asp-for="Email" name="Email" required type="text" class="form-control">
                            </div>
                            <div class="form-group">
                                <label>UserName</label>
                                <input asp-for="Username" name="UserName" required type="text" class="form-control">
                            </div>
                            <div class="form-group">
                                <label>Phone</label>
                                <input asp-for="Phone" name="Phone" required type="text" class="form-control">
                            </div>
                            <div class="form-group">
                                <label>Birthday</label>
                                <input asp-for="Birthday" name="Birthday" required type="date" class="form-control">
                            </div>
                            <div class="form-group ">
                                <div class=" col col-third  ">
                                    <label>Ward</label>
                                    <select asp-for="IdWard" name="IdWard" class="form-control">
                                        @foreach (var item in DetailWard)
                                        {
                                            <option value="@item.IdWard">@item.Name</option>

                                        }
                                    </select>
                                </div>

                                <div class="col col-third ">
                                    <label>District</label>
                                    <select name="user_level" class="form-control">
                                        @foreach (var item in DetailDistrict)
                                        {
                                            <option value="@item.IdDistrict">@item.Name</option>

                                        }
                                    </select>

                                </div>
                                <div class="col col-third ">
                                    <label>Province</label>
                                    <select name="user_level" class="form-control">
                                        @foreach (var item in DetailProvince)
                                        {
                                            <option value="@item.IdProvince">@item.Name</option>

                                        }
                                    </select>

                                </div>

                            </div>


                            <div class="form-group">
                                <label>Address</label>
                                <input asp-for="Address" name="Address" required type="text" class="form-control">
                            </div>
                           
                            
                          
                            <button type="submit" name="sbm" class="btn btn-primary">Cập nhật</button>
                            <button type="reset" class="btn btn-default">Làm mới</button>
                   
                    </form> 
                    </div>
                </div>
            </div>
        </div><!-- /.col-->
    </div><!-- /.row -->

</div>