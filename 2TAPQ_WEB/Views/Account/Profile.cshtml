@model BusinessObjects.Models.Account
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutFarm.cshtml";

}
  
<link rel="stylesheet" href="~/css/cssfarm/index_user.css">
<link rel="stylesheet" href="~/css/cssfarm/profile_user.css">
 
<main>
    <section class="py-5 my-5">
        <div class="container">
            <div class="bg-white shadow rounded-lg d-block d-sm-flex">
                <div class="profile-tab-nav border-right">
                    <div class="p-4">
                        <div class="img-circle text-center mb-3">

                            <img src="@Model.Image" alt="Image" id="imgA" class="shadow">

                            <div class="middle">
                               <input type="file" name="FileAvata" id="FileAvata"/>
                            </div>
                        </div>

                        <h4 class="text-center">Lemon Tree</h4>
                    </div>
                    <div class="nav flex-column nav-pills" id="v-pills-tab" role="tablist" aria-orientation="vertical">
                        <a class="nav-link " asp-action="Profile" aria-selected="true">
                            <i class="fa fa-home text-center mr-1"></i>
                            Account
                        </a>
                        <a class="nav-link" asp-action="ChangePassword" aria-selected="false">
                            <i class="fa fa-key text-center mr-1"></i>
                            Password
                        </a>

                        <a class="nav-link" asp-action="JoinCooperative" aria-selected="false">
                            <i class="fa fa-star text-center mr-1"></i>
                            Join Code
                        </a>


                    </div>
                </div>
                <div class="tab-content p-4 p-md-5" id="v-pills-tabContent">
                    <div class="tab-pane fade show active" role="tabpanel"
                         aria-labelledby="account-tab">
                        <h3 class="mb-4">Account Settings</h3>
                        <form asp-action="EditProfile">
                            <input type="hidden" asp-for="IdAcc" />
                            <input type="hidden" asp-for="Status" />
                            <input type="hidden" asp-for="Role" />
                            <input type="hidden" asp-for="Password" />
                            <input type="hidden" asp-for="DateJoin" />
                            <input type="hidden" asp-for="IdWard" />
                             <input type="hidden" asp-for="Username" />
                              <input type="hidden" asp-for="Email" />
                             <input type="hidden" asp-for="Image" id="ImageA" value="" />
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Tài Khoản</label>
                                        <input type="text" class="form-control" asp-for="Fullname">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Số Điện Thoại</label>
                                        <input type="text" class="form-control"  asp-for="Phone">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Email</label>
                                        <input type="text" class="form-control" value="@Model.Email"
                                               disabled>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Khu Vực</label>
                                        <input type="text" class="form-control" value="@Model.IdWardNavigation.Name" disabled>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Địa Chỉ</label>
                                        <input type="text" class="form-control" asp-for="Address">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Ngày Sinh</label>
                                        <input type="date" asp-for="Birthday" class="form-control">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Số Lượng Ao</label>
                                        <input type="text" class="form-control" value="20 cái" disabled>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Sản Lượng</label>
                                        <input type="text" class="form-control" value="5 tấn" disabled>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label> Ngày Vào Hợp Tác Xã</label>
                                        <input type="date" class="form-control" value="5 tấn" disabled>
                                    </div>
                                </div>

                            </div>
                 
                        <div>
                            <button type="submit" class="btn-area btn-primary">Update</button>
                      
                        </div>
                        </form>
                    </div>



                </div>
            </div>
        </div>
    </section>

</main>  <script src="~/js/base64.js"></script>